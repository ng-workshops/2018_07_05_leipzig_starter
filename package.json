{
  "name": "angular-demo-app-starter",
  "version": "1.0.0",
  "description": "Angular Demo Application to show some cool stuff :-)",
  "license": "MIT",
  "jest": {
    "preset": "jest-preset-angular",
    "globals": {
      "__TRANSFORM_HTML__": true,
      "ts-jest": {
        "tsConfigFile": "config/tsconfig.jest.json",
        "enableTsDiagnostics": true
      }
    },
    "setupTestFrameworkScriptFile": "<rootDir>/config/setupJest.ts",
    "transformIgnorePatterns": [
      "node_modules/(?!lodash-es/*|@angular/common/locales/*)"
    ],
    "moduleNameMapper": {
      "^my-ui-lib/(.*)": "<rootDir>/node_modules/my-ui-lib/$1"
    },
    "testResultsProcessor": "jest-junit",
    "coverageDirectory": "tmp/coverage",
    "coverageReporters": [
      "json",
      "html",
      "cobertura",
      "text-summary"
    ]
  },
  "jest-junit": {
    "suiteName": "angular-demo-app",
    "output": "./tmp/junit.xml"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:all": "ng serve --proxy-config config/proxy.conf.json --hmr -e=hmr & npm run start:server",
    "start:server": "node server",
    "start:dist": "ng build --prod & DIST=true node server",
    "build": "ng build --prod",
    "build:report": "ng build --stats-json && webpack-bundle-analyzer dist/stats.json",
    "test:cli": "ng test",
    "jest": "jest --silent",
    "tdd": "jest --bail --expand --verbose",
    "tdd:cover": "jest --coverage --no-cache",
    "test": "ng test",
    "test:cover": "jest --silent --coverage --no-cache && opn tmp/coverage/index.html",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.0",
    "@angular/cdk": "6.0.1",
    "@angular/common": "6.0.0",
    "@angular/compiler": "6.0.0",
    "@angular/core": "6.0.0",
    "@angular/forms": "6.0.0",
    "@angular/http": "6.0.0",
    "@angular/material": "6.0.1",
    "@angular/platform-browser": "6.0.0",
    "@angular/platform-browser-dynamic": "6.0.0",
    "@angular/router": "6.0.0",
    "core-js": "^2.5.5",
    "rxjs": "6.1.0",
    "rxjs-compat": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "~6.0.0",
    "@angular/compiler-cli": "6.0.0",
    "@angular/language-service": "6.0.0",
    "@angularclass/hmr": "2.1.3",
    "@types/core-js": "0.9.46",
    "@types/jasmine": "~2.8.7",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "22.2.3",
    "@types/node": "~10.0.3",
    "body-parser": "1.18.2",
    "codelyzer": "^4.3.0",
    "compression": "1.7.2",
    "express": "4.16.3",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "22.4.3",
    "jest-junit": "3.7.0",
    "jest-preset-angular": "5.2.2",
    "jest-util": "22.4.3",
    "karma": "~2.0.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.0.0",
    "material-design-icons": "3.0.1",
    "protractor": "~5.3.1",
    "ts-node": "~6.0.2",
    "tslint": "~5.10.0",
    "typescript": "2.7.2",
    "webpack-bundle-analyzer": "2.11.1",
    "@angular-devkit/build-angular": "~0.6.0"
  }
}
